// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  name      String
  firstname String
  lastname  String
  MobileNo  String
  posts     Post[]
}

model Post {
  id        Int    @id @default(autoincrement())
  content   String
  longitude String
  latitude  String
  image     String
  User      User?  @relation(fields: [userId], references: [id])
  userId    Int?
}
